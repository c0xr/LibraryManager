<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ReaderInspectionActivity">

    <Button
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/reader_inspection_margin_outline"
        android:layout_marginTop="@dimen/reader_inspection_margin_outline"
        android:layout_marginEnd="@dimen/reader_inspection_margin_outline"
        android:text="查询图书"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/borrowingInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/reader_inspection_margin_outline"
        android:layout_marginTop="@dimen/reader_inspection_margin_gap_vertical"
        android:layout_marginEnd="@dimen/reader_inspection_margin_outline"
        android:text="借阅概览"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search" />

    <Button
        android:id="@+id/libraryCardInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/reader_inspection_margin_outline"
        android:layout_marginTop="@dimen/reader_inspection_margin_gap_vertical"
        android:layout_marginEnd="@dimen/reader_inspection_margin_outline"
        android:text="借阅卡信息"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/borrowingInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>